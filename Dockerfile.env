FROM denoland/deno:2.1.5

# Setup Environment
WORKDIR /app
ENV NODE_ENV=production

# Copy Project Source Code  
COPY package*.json deno.json* deno.lock* ./
COPY . .

# Building
RUN  deno task install && \
    deno task build

# Service Start 
CMD ["deno", "task", "serve"]

# Listens Serve  Port
EXPOSE 8085
