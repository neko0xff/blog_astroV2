FROM archlinux:base-devel
WORKDIR /app

# 安裝相關套件
RUN pacman -Syyu --noconfirm\
 && pacman -S --noconfirm deno nodejs npm\
 && pacman -Scc --noconfirm

# 環境建置
COPY package*.json ./
RUN deno upgrade
# RUN npx playwright install
RUN npm install
COPY . .

# 編譯源碼
RUN deno task build
CMD ["deno", "task", "serve"]

# 指定通訊埠
EXPOSE 8085
