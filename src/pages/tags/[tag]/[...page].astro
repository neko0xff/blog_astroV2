---
import { getCollection } from "astro:content";
import type { GetStaticPathsOptions } from "astro";
import Main from "@/layouts/Main.astro";
import Layout from "@/layouts/Layout.astro";
import Header from "@/components/astro/Header.astro";
import Footer from "@/components/astro/Footer.astro";
import Card from "@/components/astro/Card.astro";
import Pagination from "@/components/astro/Pagination.astro";
import getUniqueTags from "@/utils/getUniqueTags";
import getPostsByTag from "@/utils/getPostsByTag";
import { SITE } from "@/config";

/**
 * Generates static paths for tags with pagination.
 * @param param0 The options containing the paginate function.
 * @returns An array of paths for each tag with pagination.
 */
export async function getStaticPaths({ paginate }: GetStaticPathsOptions) {
  const posts = await getCollection("blog");
  const tags = getUniqueTags(posts);

  return tags.flatMap(({ tag, tagName }) => {
    const tagPosts = getPostsByTag(posts, tag);

    return paginate(tagPosts, {
      params: { tag },
      props: { tagName },
      pageSize: SITE.postPerPage,
    });
  });
}

const params = Astro.params;
const { tag } = params;
const { page, tagName } = Astro.props;
---

<Layout title={`標籤: ${tagName} | ${SITE.title}`}>
  <Header />
  <Main
    pageTitle={[`標籤:`, `${tagName}`]}
    titleTransition={tag}
    pageDesc={`己標記 "${tagName}" 的所有文章`}
  >
    <h1 slot="title" transition:name={tag}>{`標籤:${tag}`}</h1>
    <ul>
      {page.data.map(data => <Card {...data} />)}
    </ul>
  </Main>

  <Pagination {page} />

  <Footer noMarginTop={page.lastPage > 1} />
</Layout>
