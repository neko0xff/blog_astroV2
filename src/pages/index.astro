---
import { getCollection } from "astro:content";
import Layout from "@/layouts/Layout.astro";
import Header from "@/components/astro/Header.astro";
import Footer from "@/components/astro/Footer.astro";
import Socials from "@/components/astro/Socials.astro";
import LinkButton from "@/components/astro/LinkButton.astro";
import Card from "@/components/astro/Card.astro";
import Hr from "@/components/astro/Hr.astro";
import getSortedPosts from "@/utils/getSortedPosts";
import IconRss from "@/assets/icons/IconRss.svg";
import IconArrowRight from "@/assets/icons/IconArrowRight.svg";
import { SITE } from "@/config";
import { SOCIALS } from "@/constants";
import { marked } from "marked";

const posts = await getCollection("blog");

const sortedPosts = getSortedPosts(posts);
const featuredPosts = sortedPosts.filter(({ data }) => data.featured);
const recentPosts = sortedPosts.filter(({ data }) => !data.featured);
---

<Layout>
  <Header />
  <main id="main-content" data-layout="index">
    <section id="hero" class="text-center py-8">
      <div class="flex flex-col items-center">
        {SITE.avatar?.src && (
          <div class="rounded-full w-40 h-40 mb-6 overflow-hidden">
            <img
              src={SITE.avatar.src}
              alt={SITE.avatar.alt}
              class="w-full h-full object-cover"
            />
          </div>
        )}
        <h1 class="text-4xl font-bold mb-4">
          <p set:html={marked.parse(SITE.heroTitle)} />
        </h1>
        <a
          target="_blank"
          href="/rss.xml"
          class="inline-flex items-center gap-2 text-accent hover:underline"
          aria-label="rss feed"
          title="RSS Feed"
        >
          <IconRss width={24} height={24} class="stroke-accent stroke-2" />
          <span>RSS 訂閱</span>
        </a>
        {SOCIALS.length > 0 && (
          <div class="mt-6 flex flex-wrap justify-center gap-4">
            <Socials />
          </div>
        )}
      </div>
    </section>

    <Hr />

    {featuredPosts.length > 0 && (
      <section id="featured" class="py-12">
        <h2 class="text-3xl font-semibold mb-6">精選文章</h2>
        <ul class="grid gap-6 sm:grid-cols-2 lg:grid-cols-3">
          {featuredPosts.map((data) => (
            <Card variant="h3" {...data} />
          ))}
        </ul>
      </section>
    )}

    {recentPosts.length > 0 && (
      <section id="recent-posts" class="py-12">
        <h2 class="text-3xl font-semibold mb-6">最近文章</h2>
        <ul class="grid gap-6 sm:grid-cols-2 lg:grid-cols-3">
          {recentPosts.map(
            (data, index) =>
              index < SITE.postPerIndex && <Card variant="h3" {...data} />
          )}
        </ul>
      </section>
    )}

    <div class="my-12 text-center">
      <LinkButton href="/posts/" class="inline-flex items-center gap-2">
        全部文章
        <IconArrowRight class="inline-block w-5 h-5" />
      </LinkButton>
    </div>
  </main>
  <Footer />
</Layout>
