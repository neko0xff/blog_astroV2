---
import { getCollection } from "astro:content";
import getSortedPosts from "@/utils/getSortedPosts";
import PostDetails from "@/layouts/OtherDetails.astro";
import { getEntry } from "astro:content";
import { getPath } from "@/utils/getPath";

const post = await getEntry("blog", "about");

/**
 * Generates static paths for all blog posts.
 * - Fetches all blog posts that are not drafts
 * - Maps each post to a path based on its ID and file path
 * - Returns an array of paths with associated post data as props
 * @returns An array of objects containing params for routing and props with post data
 */
export async function getStaticPaths() {
  const posts = await getCollection("blog", ({ data }) => !data.draft);
  const postResult = posts.map(post => ({
    params: { slug: getPath(post.id, post.filePath, false) },
    props: { post },
  }));

  return postResult;
}

const posts = await getCollection("blog");
const sortedPosts = getSortedPosts(posts);
---

{post && <PostDetails post={post} posts={sortedPosts} />}
