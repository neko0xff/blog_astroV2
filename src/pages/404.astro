---
import Layout from "@/layouts/Layout.astro";
import Header from "@/components/astro/Header.astro";
import Footer from "@/components/astro/Footer.astro";
import LinkButton from "@/components/astro/LinkButton.astro";
import { SITE } from "@/config";
---

<Layout title={`404 Not Found | ${SITE.title}`}>
  <Header />

  <main
    id="main-content"
    class="mx-auto flex max-w-3xl flex-1 items-center justify-center"
  >
    <div class="mb-14 flex flex-col items-center justify-center">
      <br />
      <h1 class="text-4xl font-bold mb-4 text-red-500">
        ERROR 404
      </h1>
      <div class="not-found-wrapper text-center">
        <img
          src="/assets/mikucat.png"
          alt="404"
          width="200"
          height="100"
          class="mx-auto mb-6"
        />

        
        <p class="mb-6 text-lg">
          ! 金罵找唔到恁所需要唉欲件，請查明後輸入正確的路徑 !
        </p>

        <!-- 回主頁面  -->
        <LinkButton
          href="/"
          class="my-6 text-lg underline decoration-dashed underline-offset-8"
        >
          ! 請按一下這邊，得以回到主頁面 !
        </LinkButton>

        <span aria-hidden="true" class="mt-4 block">¯\_(ツ)_/¯</span>
      </div>
    </div>
  </main>

  <Footer />
</Layout>
